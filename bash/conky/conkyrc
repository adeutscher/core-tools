# Old alignment properties.
# Positioning is now handled by start.sh
#alignment bottom_right
#gap_x 10
#gap_y 40

# A width of 390 translates to 35 characters of writing room
# with standard font before things start to expand.
maximum_width 390

background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=12
net_avg_samples 2
no_buffers no
double_buffer yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager  

stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
text_buffer_size 2048

# Draw rounded backgrounds with lua.

lua_load lua/draw_bg.lua
lua_draw_hook_pre draw_bg 
# If you want to disable the lua backgrounds, set own_window_transparent to no and uncomment own_window_color

own_window_transparent yes
#own_window_colour 1A334C

